void Write_Max7219_byte(unsigned char DATA) 
{   
            unsigned char i;
	    digitalWrite(CS,LOW);		
	    for(i=8;i>=1;i--)
          {		  
             digitalWrite(CLK,LOW);
             digitalWrite(DIN,DATA&0x80);// Extracting a bit data
             DATA = DATA<<1;
             digitalWrite(CLK,HIGH);
           }                                 
}
 
 
void writeMAX7219(unsigned char address, unsigned char dat) {
  digitalWrite(CS, LOW);
  Write_Max7219_byte(address);           //address，code of LED
  Write_Max7219_byte(dat);               //data，figure on LED 
  digitalWrite(CS, HIGH);
}

void initMAX7219() {
  writeMAX7219(0x09, 0x00);       //decoding ：BCD
  writeMAX7219(0x0a, 0x03);       //brightness 
  writeMAX7219(0x0b, 0x07);       //scanlimit；8 LEDs
  writeMAX7219(0x0c, 0x01);       //power-down mode：0，normal mode：1
  writeMAX7219(0x0f, 0x00);       //test display：1；EOT，display：0
}

void setup() {  
  Serial.begin(9600);
    
  // accelerometer
  accel.init();

  // init MAX7219 for LED Matrix
  pinMode(CLK, OUTPUT);
  pinMode(CS, OUTPUT);
  pinMode(DIN, OUTPUT);
  delay(50);
  initMAX7219();  
}

